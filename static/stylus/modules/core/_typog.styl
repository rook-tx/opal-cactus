h1, h2
  font-family $hfont
  font-weight $bold

h1
  font-size ($h1/$p)*1em
  line-height $let1
  margin-bottom $let1*1em

h2
  font-size ($h2/$p)*1em
  line-height $let2
  margin-bottom $let2*1em

h3
  font-size ($h3/$p)*1em
  line-height $let3
  margin-bottom $let3*1em

h4
  font-size ($h4/$p)*1em
  line-height $let4
  margin-bottom $let4*1em

h5
  font-size ($h5/$p)*1em
  line-height $let5
  margin-bottom $let5*1em

p
  background rgba(0,0,20,.21)
  margin 0 auto
  max-width 100vh
  line-height 7.5vh
  padding 2.5vh 0
  text-align center
  text-shadow $text-shadow

  .clear-col &:last-of-type
    padding-bottom 100vh

strong, b
  font-weight $bold
  letter-spacing 0

em, i
  font-style italic

sup
  font-size smaller
  vertical-align top
